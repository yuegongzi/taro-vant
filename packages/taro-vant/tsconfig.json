{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "preserve",
    "types": [
      "node"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "pretty": true,
    "baseUrl": "./",
    "outDir": "es",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "declarationDir": ".",
    "emitDeclarationOnly": true
  },
  "include": [
    "es/**/*",
    "lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/test/**/*",
    "**/__test__/**/*",
    "**/demo/**/*"
  ]
}
